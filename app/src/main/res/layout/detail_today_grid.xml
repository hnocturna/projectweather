<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    app:columnCount="2">

    <android.support.v7.widget.Space
        app:layout_columnSpan="2"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        />

    <TextView
        android:id="@+id/detail_day_text"
        android:layout_marginTop="@dimen/default_margin"
        android:layout_marginBottom="@dimen/default_margin"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="@color/secondary_text"
        app:layout_columnSpan="2"
        app:layout_columnWeight="1"
        app:layout_gravity="fill_horizontal"
        tools:text="Today, January 12" />

    <ImageView
        android:id="@+id/detail_icon"
        android:layout_width="0dp"
        android:adjustViewBounds="true"
        android:maxHeight="@dimen/today_icon"
        android:maxWidth="@dimen/today_icon"
        app:layout_columnWeight="1"
        app:layout_gravity="fill_horizontal"
        tools:src="@drawable/art_clear" />

    <TextView
        android:id="@+id/detail_high_text"
        android:layout_width="0dp"
        android:fontFamily="sans-serif-light"
        android:textSize="72sp"
        android:textColor="@color/primary_text"
        android:gravity="center_horizontal"
        app:layout_columnWeight="1"
        app:layout_gravity="fill_horizontal"
        tools:text="100"
        />

    <TextView
        android:id="@+id/detail_description_text"
        android:layout_width="0dp"
        android:fontFamily="sans-serif"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="@color/secondary_text"
        android:gravity="center_horizontal"
        app:layout_columnWeight="1"
        tools:text="Arizona Heat"
        />

    <TextView
        android:id="@+id/detail_low_text"
        android:layout_width="0dp"
        android:layout_marginBottom="@dimen/default_vertical_margin"
        android:fontFamily="sans-serif-light"
        android:textSize="36sp"
        android:gravity="center_horizontal"
        android:textColor="@color/secondary_text"
        app:layout_columnWeight="1"
        tools:text="0"
        />

    <android.support.v7.widget.Space
        app:layout_columnSpan="2"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1" />

</android.support.v7.widget.GridLayout>