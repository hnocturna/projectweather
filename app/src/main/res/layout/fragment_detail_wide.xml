<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <include
                layout="@layout/detail_today_grid"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:id="@+id/toolbar"
                android:elevation="0dp"
                android:background="@android:color/transparent" />

        </FrameLayout>

        <!-- For high/low temperature, humidity, wind, and pressure -->
        <android.support.v7.widget.GridLayout
            android:id="@+id/detail_additional_pane"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/detail_accent_pane_background"
            android:paddingRight="@dimen/default_horizontal_margin"
            android:paddingEnd="@dimen/default_horizontal_margin"
            app:columnCount="2">

            <android.support.v4.widget.Space
                app:layout_columnSpan="2"
                app:layout_rowWeight="1" />

            <TextView
                android:id="@+id/detail_humidity_label_text"
                android:fontFamily="sans-serif"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/detail_accent_label"
                android:text="@string/humidity"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/default_horizontal_margin"
                android:paddingRight="@dimen/default_horizontal_margin"
                android:paddingBottom="@dimen/default_horizontal_margin"
                />

            <TextView
                android:id="@+id/detail_humidity_text"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:textColor="@android:color/white"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                tools:text="88%" />

            <TextView
                android:id="@+id/detail_pressure_label_text"
                android:fontFamily="sans-serif"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/detail_accent_label"
                android:text="@string/humidity"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/default_horizontal_margin"
                android:paddingRight="@dimen/default_horizontal_margin"
                android:paddingBottom="@dimen/default_horizontal_margin" />

            <TextView
                android:id="@+id/detail_pressure_text"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:textColor="@android:color/white"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                tools:text="888 hPa" />

            <TextView
                android:id="@+id/detail_wind_label_text"
                android:fontFamily="sans-serif"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/detail_accent_label"
                android:text="@string/humidity"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/default_horizontal_margin"
                android:paddingRight="@dimen/default_horizontal_margin"
                android:paddingBottom="@dimen/default_horizontal_margin"
                />

            <TextView
                android:id="@+id/detail_wind_text"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:textColor="@android:color/white"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                tools:text="88km/h N"
                />
            <android.support.v4.widget.Space
                app:layout_columnSpan="2"
                app:layout_rowWeight="1" />

        </android.support.v7.widget.GridLayout>
    </LinearLayout>
</FrameLayout>